{
  "page": {
    "label": "TRANSLATE.PLUGIN_CONFIGURATION"
  },
  "sections": [
    {
      "id": "lcdcontroller_settings",
      "element": "section",
      "label": "TRANSLATE.TITLE",
      "icon": "fa-plug",
      "onSave": {"type":"controller", "endpoint":"user_interface/lcdcontroller", "method":"saveUIConfig"},
      "saveButton": {
      "label": "TRANSLATE.SAVE",
      "data": [
        "welcome_message_bool",
        "welcome_message_duration",
        "welcome_message_string",
        "sleep_timer",
        "lcd_address"
        ]
      },
      "content": [

        {
          "id":"welcome_message_bool",
          "element": "switch",
          "doc": "TRANSLATE.WELCOMEMESSAGEBOOLDOC",
          "label": "TRANSLATE.WELCOMEMESSAGEBOOLLABEL",
          "value": true
        },
        {
          "id": "welcome_message_duration",
          "type":"text",
          "element": "input",
          "doc": "TRANSLATE.WELCOMEMESSAGEDURATIONDOC",
          "label": "TRANSLATE.WELCOMEMESSAGEDURATIONLABEL",
          "visibleIf": {"field": "welcome_message_bool", "value": true},
          "value": "5"
        },
        {
          "id": "welcome_message_string",
          "type":"text",
          "element": "input",
          "doc": "TRANSLATE.WELCOMEMESSAGEDOC1",
          "label": "TRANSLATE.WELCOMEMESSAGELABEL1",
          "visibleIf": {"field": "welcome_message_bool", "value": true},
          "value": "Starting..."
        },
        {
          "id": "sleep_timer",
          "type":"text",
          "element": "input",
          "doc": "TRANSLATE.SLEEPTIMERDOC",
          "label": "TRANSLATE.SLEEPTIMERLABEL",
          "value": "30"
        },
        {
          "id": "lcd_address",
          "type":"text",
          "element": "input",
          "doc": "TRANSLATE.LCDADDRESSDOC",
          "label": "TRANSLATE.LCDADDRESSLABEL",
          "value": "0x27"
        }
      ]
    },
    {
      "id": "lcdcontroller_dsd",
      "element": "section",
      "label": "TRANSLATE.DSDTITLE",
      "icon": "fa-plug",
      "onSave": {"type":"controller", "endpoint":"user_interface/lcdcontroller", "method":"saveDSDConfig"},
      "saveButton": {
      "label": "TRANSLATE.DSDSAVE",
      "data": [
        "dsd_direct_bool"
        ]
      },
      "content": [

        {
          "id":"dsd_direct_bool",
          "element": "switch",
          "doc": "TRANSLATE.DSDDIRECTDOC",
          "label": "TRANSLATE.DSDDIRECTLABEL",
          "value": true
        }
        ]
    }
  ]
}
